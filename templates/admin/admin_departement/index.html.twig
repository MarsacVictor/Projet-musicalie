{% extends '/admin/admin_base.html.twig' %}

{% block title %}Hello AdminFestivalController!{% endblock %}

{% block contenu %}
    {% for message in app.flashes('notice') %}
        <div class="alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div>
        <a class="btn btn-primary" href="{{ path('app_admin_departement_ajouter') }}">Ajouter</a>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                        {% for departement in departements %}
                            <tr>
                                <td>{{ departement.nom }}</td>
                                <td>
                                    <a class="btn btn-success" type="submit" href="{{path('app_admin_departement_modifier', {'id' : departement.id}) }}">Modifier</a>
                                    <a class="btn btn-warning" type="submit" onclick="confirm('ÃŠtes vous sur de vouloir supprimer le departement')" href="{{path('app_admin_departement_supprimer', {'id' : departement.id}) }}">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}

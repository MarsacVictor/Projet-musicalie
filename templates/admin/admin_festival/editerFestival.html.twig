{% extends '/admin/admin_base.html.twig' %}
{% block contenu %}
    <div>
        <h1>{{ app.request.get('_route') == "app_admin_festival_ajouter" ? 'Ajouter' : 'Modifier'}} un festival</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-4">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-4">
                {{ form_row(form.date) }}
            </div>
            <div class="col-4">
                {{ form_row(form.dateCreation) }}
            </div>
            <div class="col-4">
                {{ form_row(form.lieu) }}
            </div>
            <div class="col-4">
                {{ form_row(form.artiste) }}
            </div>
            <div class="col-4">
                {{ form_row(form.departement) }}
            </div>
            <div class="col-4">
                {{ form_row(form.affiche) }}
            </div>
        </div>
        {% if app.request.get('_route') == 'app_admin_festival_ajouter' %}
            <button class="btn btn-primary" type="submit">Ajouter</button>
        {% else %}
            <button class="btn btn-primary" type="submit">Modifier</button>
        {% endif %}

        {{ form_end(form) }}
    </div>

{% endblock %}